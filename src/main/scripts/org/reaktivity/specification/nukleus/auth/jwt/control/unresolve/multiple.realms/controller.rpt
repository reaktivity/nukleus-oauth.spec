property nukleiUR06C ${nuklei:directory("target/nukleus-itests").controlCapacity(4096, 4096)}

property controlUR06C ${nukleiUR06C.control()}

property authorization1 0x0001_000000000000L
property authorization2 0x0002_000000000000L

connect await RESOLVED
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlUR06C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlUR06C.nukleus)}

connected

write 0x00000012
write ${controlUR06C.nextCorrelationId()}
write ${core:string("auth-jwt")}
write ${authorization1}
write flush

read 0x40000012
read ${controlUR06C.correlationId()}

write 0x00000012
write ${controlUR06C.nextCorrelationId()}
write ${core:string("auth-jwt")}
write ${authorization2}
write flush

read 0x40000012
read ${controlUR06C.correlationId()}

close
closed
