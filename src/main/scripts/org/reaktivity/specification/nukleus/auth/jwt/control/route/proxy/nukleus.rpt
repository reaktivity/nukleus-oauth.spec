property nukleiRG010101N ${nuklei:directory("target/nukleus-itests").controlCapacity(4096, 4096)}

property controlRG010101N ${nukleiRG010101N.controlNew("auth-jwt")}

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlRG010101N.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlRG010101N.controller)}

connected

read 0x00000001
read (long:correlationIdRG010101N)
read [0x02]
read [0x06] "source"
read 0L
read [0x06] "target"
read (long:proxyConnectRefRG010101N)
read [0..8] # authorization

write 0x40000001
write ${correlationIdRG010101N}
write ${nukleus:newRouteRef()}
write flush

close
closed
