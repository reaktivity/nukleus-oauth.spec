property nukleiUR06N ${nuklei:directory("target/nukleus-itests").controlCapacity(4096, 4096)}

property controlUR06N ${nukleiUR06N.controlNew("auth-jwt")}

connect await RESOLVED 
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlUR06N.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlUR06N.controller)}

connected

read 0x00000012
read (long:correlationIdUR061N)
read [0..8] # authorization1

write 0x40000012
write ${correlationIdUR061N}
write flush

read 0x00000012
read (long:correlationIdUR062N)
read [0..8] # authorization2

write 0x40000012
write ${correlationIdUR062N}
write flush

close
closed
