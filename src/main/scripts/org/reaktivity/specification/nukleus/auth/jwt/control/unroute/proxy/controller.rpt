property newProxyAcceptRef ${nukleus:newRouteRef()} # external scope
property newProxyConnectRef ${nukleus:newRouteRef()} # external scope

property nukleiUR020101C ${nuklei:directory("target/nukleus-itests").controlCapacity(4096, 4096)}

property controlUR020101C ${nukleiUR020101C.control("auth-jwt")}

property authorization 0x0000_000000000000L # external

connect await ROUTED_PROXY
        "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlUR020101C.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlUR020101C.nukleus)}

connected

write 0x00000002
write ${controlUR020101C.nextCorrelationId()}
write [0x02]
write [0x06] "source"
write ${newProxyAcceptRef}
write [0x06] "target"
write ${newProxyConnectRef}
write ${authorization}
write flush

read 0x40000002
read ${controlUR020101C.correlationId()}

close
closed
