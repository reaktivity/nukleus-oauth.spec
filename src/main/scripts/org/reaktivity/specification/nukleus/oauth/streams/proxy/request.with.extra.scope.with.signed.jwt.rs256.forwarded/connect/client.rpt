property oauthToken ${oauth:jwt("RS256")
                           .claim("iss", "test issuer")
                           .claim("scopes", "scope1 scope3 scope4")
                           .sign()}

connect await ROUTED_PROXY
        "nukleus://streams/target#0"
        option nukleus:authorization 0x0001000000000005L
        option nukleus:window 8192
        option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:headers()
                              .item(":scheme", "http")
                              .item(":method", "GET")
                              .item(":path", "/path")
                              .item(":authority", "localhost:8080")
                              .item("authorization", "Bearer ".concat(oauthToken))
                              .build()}


connected

write close

read nukleus:begin.ext ${http:headers()
                             .item(":status", "200")
                             .item("content-length", "11")
                             .build()}
read "hello world"

read closed
