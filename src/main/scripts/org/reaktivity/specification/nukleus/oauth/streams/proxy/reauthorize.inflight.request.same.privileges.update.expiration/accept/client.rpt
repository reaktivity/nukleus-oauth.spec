                              .header(":path", "/path")
                              .header(":authority", "localhost:8080")
                              .header("authorization", "Bearer ".concat(oauthTokenFresh))
                              .build()}
connected

write close
read nukleus:begin.ext ${http:beginEx()
                             .typeId(nukleus:id("http"))
                             .header(":status", "200")
